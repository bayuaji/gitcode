@model IEnumerable<GitCode.Models.Feature>

@{
    ViewBag.SideBar = "True";
    var i = 0;
    ViewBag.Title = "Index";
}

<div style="float:right">
    @Html.ActionLink("Create New", "Create", null , new { @class = "ButtonLink" })
</div>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            Fitur Number
        </th>
        <th>
            Detail
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    i++;
    <tr>
        <td>
            #@Html.ActionLink(i.ToString(), "Feature", "Repository", new { path = GitCode.Models.PagePropertiesModel.projectName  + "/master/" + i }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FeatureId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FeatureId })
        </td>
    </tr>
}
</table>

