@{
    ViewBag.Title = "MyRepository";
}

<h3>
    My Repository
</h3>
<table class="table table-striped" style="width:100%;">
    <tr>
        <th>
            Repository
        </th>
        <th></th>
    </tr>
    @foreach (var repo in ViewBag.OwnRepo as List<GitCode.Models.Repository>)
    {
        <tr>
            <td>
                <table style="margin:0;">
                    <tr>
                        <td>
                            @Html.ActionLink(repo.User + "/" + repo.Project, "Tree", new { path = repo.User + "/" + repo.Project + "/master" })
                        </td>
                    </tr>
                    <tr>
                        <td >
                            <font color="grey"> @repo.ShortDescription</font>
                        </td>
                    </tr>
                </table>
            </td>
            <td >
                @Html.ActionLink("Delete", "Delete", new { id = repo.RepositoryId})
            </td>
        </tr>
    }
</table>

<h3>
    Contrib Repository
</h3>
<table class="table table-striped" style="width:100%;">
    <tr>
        <th>
            Repository
        </th>
        <th></th>
    </tr>
    @foreach (var repo in ViewBag.ContribRepo as List<GitCode.Models.Repository>)
    {
        <tr>
            <td>
                <table>
                    <tr>
                        @Html.ActionLink(repo.User + "/" + repo.Project, "Tree", new { path = repo.User + "/" + repo.Project + "/master" })
                    </tr>
                    <tr>
                        @repo.ShortDescription
                    </tr>
                </table>
            </td>
            <td></td>
        </tr>
    }
</table>