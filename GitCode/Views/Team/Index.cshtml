@model IEnumerable<GitCode.Models.Team>

@{
    ViewBag.Title = "Index";
}

<div style="float:right">
    @Html.ActionLink("New Team", "Create", null, new { @class = "ButtonLink" })
</div>

<table class="table table-striped table-bordered" style="width:100%;table-layout:fixed">
    <tr>
        <th style="width:20%;">
            Team Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="word-wrap:break-word;">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
            @if(item.DetailTeams.Where(dt=>dt.UserId == WebSecurity.CurrentUserId && dt.IsOwner).Any())
            {
                <td> 
                @Html.ActionLink("Detail","Details", "DetailTeam", new { id = item.TeamId }, null) | @Html.ActionLink("Delete", "Delete", new { id=item.TeamId })
                </td>
        }
        else
        {
                <td></td>
            }
    </tr>
}

</table>
